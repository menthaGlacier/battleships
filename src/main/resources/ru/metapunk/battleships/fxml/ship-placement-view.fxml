            <padding>
                <Insets left="30.0" />
            </padding></VBox>
    </AnchorPane>
   <VBox layoutX="620.0" layoutY="602.0" prefHeight="100.0" prefWidth="260.0" spacing="10.0">
       <Button onAction="#handleClearButtonClick" mnemonicParsing="false" prefWidth="160.0" text="Clear">
           <font>
               <Font size="20.0" />
           </font>
       </Button>
       <Button onAction="#handleConfirmButtonClick" mnemonicParsing="false" prefWidth="160.0" text="Confirm">
           <font>
               <Font size="20.0" />
